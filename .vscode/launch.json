    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "proxy-server",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "program": "${workspaceFolder}/proxy-server/proxy-server.js",
            "runtimeExecutable": "nodemon",
            "env": {
                "PORT": "3000",
                "LOGLEVEL": "debug",
                "REDIS_URL": "redis://localhost:6379",
                "SYNC_TIMER": "10"
            },
            "args": ["--trace-sync-io"],
            "restart": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "proxy-client",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "program": "${workspaceFolder}/proxy-client/client-server.js",
            "runtimeExecutable": "nodemon",
            "env": {
                "PORT": "3010",
                "LOGLEVEL": "debug",
                "REDIS_URL": "redis://localhost:6379",
                "SYNC_TIMER": "10",
                "PRIVATE_IP": "127.0.0.1"
            },
            "args": ["--trace-sync-io"],
            "restart": true,
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Test NJSProxy",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "runtimeExecutable": "npm",
            "env": {
                "PORT": "3000",
                "LOGLEVEL": "debug",
                "REDIS_URL": "redis://localhost:6379",
                "SYNC_TIMER": "10"
            },
            "args": ["test"],
            "restart": true,
            "console": "integratedTerminal"
        }
    ]
}